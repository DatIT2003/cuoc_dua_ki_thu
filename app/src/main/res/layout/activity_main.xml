<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#21831A">

    <TextView
        android:id="@+id/TextView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Nguyễn Văn Đạt"
        android:textColor="#03A9F4"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TextView_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="40sp"
        android:layout_below="@id/TextView_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/ImageView_logo"
        android:layout_width="149dp"
        android:layout_height="190dp"
        android:layout_below="@id/TextView_point"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/logo2" />

    <ImageView
        android:id="@+id/ImageView_play"
        android:layout_width="114dp"
        android:layout_height="121dp"
        android:layout_below="@id/ImageView_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/play_icon" />

    <CheckBox
        android:id="@+id/CheckBox_player1"
        android:button="@drawable/checkbox_custom"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/ImageView_play"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/SeekBar_player1"
        android:thumb="@drawable/turtle"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/CheckBox_player1"
        android:layout_alignTop="@id/CheckBox_player1"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/CheckBox_player2"
        android:button="@drawable/checkbox_custom"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/CheckBox_player1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/SeekBar_player2"
        android:thumb="@drawable/buffalo_icon"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/CheckBox_player2"
        android:layout_alignTop="@id/CheckBox_player2"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/CheckBox_player3"
        android:button="@drawable/checkbox_custom"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/CheckBox_player2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/SeekBar_player3"
        android:thumb="@drawable/bird"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/CheckBox_player3"
        android:layout_alignTop="@id/CheckBox_player3"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/Button_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp" />

</RelativeLayout>
